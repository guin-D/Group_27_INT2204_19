<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>


<AnchorPane prefHeight="710.0" prefWidth="1210.0" style="-fx-background-color: #F6F8FE;"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="LibraryManagement.controllers.resources">
    <children>
        <HBox prefHeight="30.0" prefWidth="1210.0" spacing="30.0" AnchorPane.topAnchor="10.0">
            <children>
                <ComboBox fx:id="filterSearch" prefHeight="32.0" prefWidth="120.0" promptText="All books"
                          style="-fx-background-color: #FFFFFF; -fx-prompt-text-fill: #FFFFFF;">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="All books"/>
                            <String fx:value="Title"/>
                            <String fx:value="Author initial"/>
                            <String fx:value="Publisher name"/>
                            <String fx:value="ISBN"/>
                        </FXCollections>
                    </items>
                </ComboBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
