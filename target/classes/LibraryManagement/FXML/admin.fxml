<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-color: #FFFFFF;"
            xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="LibraryManagement.controllers.Admin">
    <children>
        <VBox prefHeight="720.0" prefWidth="60.0" spacing="10.0" style="-fx-background-color: #D6DDF7;">
            <children>
                <Button mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0"
                        style="-fx-background-color: #00000000;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="40.0">
                            <image>
                                <Image url="@../Image/open-book.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#showAccount" prefHeight="45.0"
                        prefWidth="55.0" style="-fx-background-color: #00000000;" text="Account" textFill="#203169">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="30.0">
                            <image>
                                <Image url="@../Image/user.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="8.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#showDashboard" prefHeight="45.0"
                        prefWidth="55.0" style="-fx-background-color: #00000000;" text="Dashboard" textFill="#203169">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="30.0">
                            <image>
                                <Image url="@../Image/share.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="8.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#showBorrow" prefHeight="45.0"
                        prefWidth="55.0" style="-fx-background-color: #00000000;" text="Borrow" textFill="#203169">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="30.0">
                            <image>
                                <Image url="@../Image/books.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="8.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#showMember" prefHeight="45.0"
                        prefWidth="55.0" style="-fx-background-color: #00000000;" text="Member" textFill="#203169">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="30.0">
                            <image>
                                <Image url="@../Image/people.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="8.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#showResource" prefHeight="45.0"
                        prefWidth="55.0" style="-fx-background-color: #00000000;" text="Resources" textFill="#203169">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="30.0">
                            <image>
                                <Image url="@../Image/book.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="8.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
                <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#logout" prefHeight="45.0"
                        prefWidth="55.0" style="-fx-background-color: #00000000;" text="Logout" textFill="#203169">
                    <graphic>
                        <ImageView fitHeight="25.0" fitWidth="30.0">
                            <image>
                                <Image url="@../Image/log-out.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <font>
                        <Font size="8.0"/>
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND"/>
                    </cursor>
                </Button>
            </children>
            <padding>
                <Insets left="5.0" right="5.0" top="20.0"/>
            </padding>
        </VBox>
        <Pane fx:id="main" layoutX="70.0" prefHeight="720.0" prefWidth="1210.0" style="-fx-background-color: #F6F8FE;"/>
    </children>
</AnchorPane>
